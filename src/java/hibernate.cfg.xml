<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/data_home?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="com/Models/Personas.hbm.xml"/>
    <mapping resource="com/Models/TiposInmuebles.hbm.xml"/>
    <mapping resource="com/Models/Inmuebles.hbm.xml"/>
    <mapping resource="com/Models/Reserva.hbm.xml"/>
    <mapping resource="com/Models/TiposHabitacion.hbm.xml"/>
    <mapping resource="com/Models/Valoraciones.hbm.xml"/>
    <mapping resource="com/Models/Roles.hbm.xml"/>
    <mapping resource="com/Models/Usuarios.hbm.xml"/>
    <mapping resource="com/Models/Suscripciones.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
